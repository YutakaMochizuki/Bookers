<header>
  <h1>Books</h1>
</header>


<div>
<table>
  <tr><th>Title</th><th>Body</th></tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><p>Show</p></td>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <td><p>Destroy</p></td>
  </tr>
  <% end %>
</table>
</div>

<div>
<h2>New Book</h2>
<%= form_with model: @book do |f| %>
<p>title</p>
<%= f.text_field :title %>
<p>body</p>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</div>

